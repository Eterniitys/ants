{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
    <!-- Features -->
    <!-- Main -->
    <div id="banner-wrapper">
        <div class="box container">
            <div class="row">
                <div class="col-12 col-12-medium">
                    <h2>{{ gender.name }}</h2>
                    <p>{{ gender.description }}</p>
                </div>
            </div>
        </div>
    </div>
    <main id="features-wrapper">
        <div class="container">
            <div id="content">
                <div class="container">

                    <div class="row">
                        <!-- 3fois -->
                        {% for s in gender.getSpecies() %}
                            <div class="col-4 col-12-medium">
                                <!-- Box -->
                                <section class="box feature">
                                    <a href="{{ path("species" , {'gender' : gender.name , 'specie' : s.name}) }}"
                                       class="image featured"><img src="{{ asset("images/"~s.image) }}" alt=""/></a>
                                    <div class="inner">
                                        <header>
                                            <h2>{{ s.name }}</h2>
                                        </header>
                                        <p>{{ s.description|truncate(150) }}</p>
                                    </div>
                                </section>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock %}
